<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/show_net_inf_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/btn_action"
        android:drawableEnd="@drawable/ic_ipv4_black_24dp"
        android:drawablePadding="10dp"
        android:text="@string/show_ipv4"
        android:textAllCaps="false"
        android:textColor="@color/colorTextMain"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/network_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_net_inf_btn"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ipv4_localhost_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ipv4_localhost_search"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorTextMain"
            android:layout_margin="3dp"
            android:textSize="22sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/ipv4_loopback_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ipv4_looback_search"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextMain"
            android:textSize="22sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/ipv4_current_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ipv4_current_search"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextMain"
            android:textSize="22sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/type_connection_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_connection_search"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextMain"
            android:textSize="22sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/dns_1_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_connection_search"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextMain"
            android:textSize="22sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/dns_2_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_connection_search"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextMain"
            android:textSize="22sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/default_gateway_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_connection_search"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextMain"
            android:textSize="22sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/ip_address_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_connection_search"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextMain"
            android:textSize="22sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/lease_time_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_connection_search"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextMain"
            android:textSize="22sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/subnet_mask_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_connection_search"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextMain"
            android:textSize="22sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/serveur_address_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_connection_search"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextMain"
            android:textSize="22sp"
            android:visibility="invisible" />

    </LinearLayout>

</RelativeLayout>